{
	// Hush CMake
	"cmake.configureOnOpen": false,
	// IntelliSense
	"C_Cpp.default.compilerPath": "/opt/zephyr-sdk-0.16.5/arm-zephyr-eabi/bin/arm-zephyr-eabi-gcc.exe",
	"C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",
	// Device Tree
	// File Associations
	"files.associations": {},
	// Disable Cspell errors
	"cSpell.diagnosticLevel": "Hint",
	// pytest
	"python.testing.unittestArgs": [
		"-v",
		"-s",
		"./template_zephyr/python",
		"-p",
		"test_*.py"
	],
	"files.eol": "\n",
	"files.trimTrailingWhitespace": true,
	"python.testing.unittestEnabled": true,
	"python.testing.pytestEnabled": false,
	"python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python3.11",
	"editor.formatOnSave": true,
	"devicetree.zephyr": "${workspaceFolder}/zephyr",
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter",
		"editor.formatOnSave": true
	},
	"black-formatter.args": [
		"--config",
		"${workspaceFolder}/template_zephyr/python/pyproject.toml"
	],
	"flake8.args": [
		"--config",
		"${workspaceFolder}/template_zephyr/python/setup.cfg"
	],
	"C_Cpp.clang_format_style": "file:${workspaceFolder}/zephyr/.clang-format",
	"[dts]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "nordic-semiconductor.nrf-devicetree"
	},
	"cortex-debug.variableUseNaturalFormat": true,
}